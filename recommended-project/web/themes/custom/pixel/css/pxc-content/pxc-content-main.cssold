    height:125px;
    background-size:125px;
    margin:auto;
}
#pxc-boton-opcion-editar-video-1:before {
    background-image:url('/themes/custom/pixel/img/iconos/cargar-video.png');
}
#pxc-boton-opcion-editar-video-2:before {
    background-image:url('/themes/custom/pixel/img/iconos/video-remoto.png');
}
#pxc-boton-opcion-editar-video-3:before {
    background-image:url('/themes/custom/pixel/img/iconos/grabar-video.png');
}
#pxc-boton-opcion-editar-imagen-1:before {
    background-image:url('/themes/custom/pixel/img/iconos/cargar-doc-gris.png');
}
#pxc-boton-opcion-editar-audio-1:before {
    background-image:url('/themes/custom/pixel/img/iconos/cargar-video.png');
}
#pxc-boton-opcion-editar-audio-2:before {
    background-image:url('/themes/custom/pixel/img/iconos/cargar-video.png');
}
#pxc-boton-opcion-editar-link-1:before {
    background-image:url('/themes/custom/pixel/img/iconos/cargar-doc-gris.png');
}
#pxc-boton-opcion-editar-link-2:before {
    background-image:url('/themes/custom/pixel/img/iconos/enlaces-doc-gris.png');
}
#pxc-boton-opcion-editar-link-3:before {
    background-image:url('/themes/custom/pixel/img/iconos/selec-bh-gris.png');
}

/* Acciones */
.pxc-borrador {
    padding:1.5rem 0;
}
.pxc-borrador-off {
    filter:grayscale(1) opacity(0.5);
}
#pxc-checkbox-estatus-label {
    display:block !important;
}
.pxc-foam-editor-form div[data-drupal-selector='edit-actions'] input {
    padding:.75rem 1.5rem;
    border:1px solid #ddd;
    background-color:#0037c5;
    border-radius:1.5rem;
    text-decoration:none;
    font-weight:bold;
    color:#fff;
}
.pxc-foam-editor-form div[data-drupal-selector='edit-actions'] input:hover {
    -webkit-box-shadow: 1px 1px 12px -1px rgba(0,0,0,0.25);
    -moz-box-shadow: 1px 1px 12px -1px rgba(0,0,0,0.25);
    box-shadow: 1px 1px 12px -1px rgba(0,0,0,0.25);
}
.pxc-foam-editor-form div[data-drupal-selector='edit-actions'] a {
    padding:.75rem 1.5rem;
    border:2px solid #ddd;
    border-radius:1.5rem;
    text-decoration:none;
    font-weight:bold;
}
.pxc-foam-editor-form div[data-drupal-selector='edit-actions'] a:hover {
    background-color:#fff;
}

/* Ckeditor */
.ck-button[data-bs-target='#themeModal'] {
    position:relative;
    padding:.25rem 2rem .25rem 0;
}
.ck-button[data-bs-target='#themeModal']:before {
    content: "Asistente";
    display: block;
    position: absolute;
    background-color: #eee;
    width: 130px;
    height: 30px;
    border-radius: 30px;
    font-weight: bold;
    padding-top: 8px;
}
.ck-button[data-bs-target='#themeModal']:after {
    content: "";
    display: block;
    position: absolute;
    background-image: url(/themes/custom/pixel/img/iconos/ai-blanco.png);
    background-color: #ccc;
    width: 30px;
    height: 30px;
    border-radius: 30px;
    background-size: 24px;
    background-position: center;
    right: -60px;
}


